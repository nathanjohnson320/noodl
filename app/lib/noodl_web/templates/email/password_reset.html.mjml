<mjml>
  <mj-body>
    <mj-section>
      <mj-column>
        <mj-image
          width="350px"
          href="<%= NoodlWeb.Endpoint.url() %>"
          src="<%= NoodlWeb.Endpoint.url() %>/images/logo.png"
        />
      </mj-column>
    </mj-section>

    <mj-section>
      <mj-column>
        <mj-divider border-color="#E53E3E" border-width="2px"></mj-divider>
      </mj-column>
    </mj-section>

    <mj-section>
      <mj-column>
        <mj-text>
          <%= link "Click this link to reset your password", to:
          full_url(Routes.live_path(NoodlWeb.Endpoint,
          NoodlWeb.Live.Accounts.PasswordReset, token: @token)) %>
        </mj-text>
      </mj-column>
    </mj-section>

    <mj-section>
      <mj-column>
        <mj-divider border-color="#E53E3E" border-width="2px"></mj-divider>
        <mj-text>
          <h3>ABOUT</h3>
          <p>Noodl aims to make remote events delightfully simple.</p>

          <p>Copyright Â© 2020</p>
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
